(declaim (ftype (function (fixnum list) fixnum) solve))
(defun solve (k xs)
  (declare (fixnum k)
           (list xs))
  (labels ((calc-proc (len x)
             (max (1- (ceiling len x))
                  0))
           (judge (x)
             (<= (reduce #'+
                         (mapcar (lambda (s)
                                   (calc-proc s x))
                                 xs))
                 k))
           (bs (ng ok)
             (if (<= (abs (- ng ok)) 1)
                 ok
                 (let ((mid (floor (+ ng ok) 2)))
                   (if (judge mid)
                       (bs ng mid)
                       (bs mid ok))))))
    (declare (inline calc-proc judge))
    (declare (ftype (function (fixnum fixnum)) calc-proc)
             (ftype (function (fixnum)) judge)
             (ftype (function (fixnum fixnum) fixnum) bs))
    (bs 0 (expt 10 9))))


